<div class="alert alert-success" role="alert" id="loginAlert">
    <p style="text-align: center; color:white;">No Tournament With That id</p>
</div>
<script>
    $('#loginAlert').hide();
    const urlParams = new URLSearchParams(window.location.search);
    const myParam = urlParams.get('error');
    if(myParam == "No_Tournament_With_that_id") {
        $('#loginAlert').show();
    }
</script>

<div class="alert alert-success" role="alert" id="AddAlert">
    <p style="text-align: center; color:white;">Not in range of tournament duration</p>
</div>

<script>
    $('#AddAlert').hide();
    const urlParams2 = new URLSearchParams(window.location.search);
    const myParam2 = urlParams2.get('errorFK');
    if(myParam2 == "out_of_range") {
        $('#AddAlert').show();
    }
</script>
<div class="alert alert-success" role="alert" id="errAlert">
