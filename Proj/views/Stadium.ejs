<div class="alert alert-success" role="alert" id="loginAlert">
    <p style="text-align: center; color:white;">Cannot Add Same Manager twice</p>
</div>
<script>
    $('#loginAlert').hide();
    const urlParams = new URLSearchParams(window.location.search);
    const myParam = urlParams.get('error');
    if(myParam == "Same_Manager_Cant_be_Registered_Twice") {
        $('#loginAlert').show();
    }
</script>

<div class="alert alert-success" role="alert" id="AddAlert">
    <p style="text-align: center; color:white;">No Team With Matching Id registered</p>
</div>

<script>
    $('#AddAlert').hide();
    const urlParams2 = new URLSearchParams(window.location.search);
    const myParam2 = urlParams2.get('errorFK');
